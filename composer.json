{
  "name": "rewsam/simple-boilerplating",
  "description": "Helper to boilerplate routine code templates like CRUDs or migrations",
  "minimum-stability": "stable",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Andrew Samchuk",
      "email": "email@example.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Rewsam\\SimpleBoilerplating\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rewsam\\SimpleBoilerplating\\Tests\\": "tests"
    }
  },
  "require": {
    "php": "^8.0.0",
    "mustache/mustache": "^2.13",
    "symfony/validator": "^5.3",
    "symfony/console": "^5.3",
    "league/flysystem": "^2.3"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^9",
    "phpspec/prophecy-phpunit": "^2.0",
    "rector/rector": "^0.11.60",
    "phpstan/phpstan": "^0.12.99",
    "phpstan/phpstan-strict-rules": "^0.12.11"
  },
  "scripts": {
    "test": [
      "@php ./vendor/phpunit/phpunit/phpunit"
    ]
  }
}
